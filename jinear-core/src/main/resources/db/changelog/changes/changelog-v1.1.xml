<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet author="cagdas.tunca" id="jinear-1-initialize-team">
        <createTable tableName="team">
            <column name="team_id" type="char(26)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="idate" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="udate" type="datetime"/>
            <column name="passive_id" type="char(26)"/>
            <column name="workspace_id" type="char(26)"/>
            <column name="name" type="varchar(255)"/>
            <column name="tag" type="varchar(255)"/>
            <column name="visibility" type="varchar(255)"/>
            <column name="join_method" type="varchar(255)"/>
        </createTable>

        <createIndex indexName="ix_workspace_id" tableName="team">
            <column name="workspace_id"/>
        </createIndex>

        <createIndex indexName="ix_tag" tableName="team">
            <column name="tag"/>
        </createIndex>
    </changeSet>

    <changeSet author="cagdas.tunca" id="jinear-1-initialize-team_member">
        <createTable tableName="team_member">
            <column name="team_member_id" type="char(26)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="idate" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="udate" type="datetime"/>
            <column name="passive_id" type="char(26)"/>
            <column name="account_id" type="char(26)"/>
            <column name="workspace_id" type="char(26)"/>
            <column name="team_id" type="char(26)"/>
        </createTable>

        <createIndex indexName="ix_account_id" tableName="team_member">
            <column name="account_id"/>
        </createIndex>

        <createIndex indexName="ix_workspace_id" tableName="team_member">
            <column name="workspace_id"/>
        </createIndex>

        <createIndex indexName="ix_team_id" tableName="team_member">
            <column name="team_id"/>
        </createIndex>
    </changeSet>

    <changeSet author="cagdas.tunca" id="jinear-1-initialize-topic">
        <createTable tableName="topic">
            <column name="topic_id" type="char(26)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="idate" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="udate" type="datetime"/>
            <column name="passive_id" type="char(26)"/>
            <column name="workspace_id" type="char(26)"/>
            <column name="team_id" type="char(26)"/>
            <column name="owner_id" type="char(26)"/>
            <column name="color" type="char(6)"/>
            <column name="name" type="varchar(255)"/>
            <column name="tag" type="varchar(255)"/>
        </createTable>

        <createIndex indexName="ix_owner_id" tableName="topic">
            <column name="owner_id"/>
        </createIndex>

        <createIndex indexName="ix_tag" tableName="topic">
            <column name="tag"/>
        </createIndex>

        <createIndex indexName="ix_workspace_id" tableName="topic">
            <column name="workspace_id"/>
        </createIndex>

        <createIndex indexName="ix_team_id" tableName="topic">
            <column name="team_id"/>
        </createIndex>
    </changeSet>

    <changeSet author="cagdas.tunca" id="jinear-1-initialize-task">
        <createTable tableName="task">
            <column name="task_id" type="char(26)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="idate" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="udate" type="datetime"/>
            <column name="passive_id" type="char(26)"/>
            <column name="workspace_id" type="char(26)"/>
            <column name="team_id" type="char(26)"/>
            <column name="topic_id" type="char(26)"/>
            <column name="owner_id" type="char(26)">
                <constraints nullable="false"/>
            </column>
            <column name="assigned_date" type="datetime"/>
            <column name="due_date" type="datetime"/>
            <column name="topic_tag_no" type="int"/>
            <column name="team_tag_no" type="int"/>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
        </createTable>

        <createIndex indexName="ix_workspace_id" tableName="task">
            <column name="workspace_id"/>
        </createIndex>

        <createIndex indexName="ix_topic_id" tableName="task">
            <column name="topic_id"/>
        </createIndex>

        <createIndex indexName="ix_owner_id" tableName="task">
            <column name="owner_id"/>
        </createIndex>
        <createIndex indexName="ix_team_id" tableName="task">
            <column name="team_id"/>
        </createIndex>
    </changeSet>

    <changeSet author="cagdas.tunca" id="jinear-1-initialize-topic_seq">
        <createTable tableName="topic_seq">
            <column name="topic_seq_id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="idate" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="udate" type="datetime"/>
            <column name="passive_id" type="char(26)"/>
            <column name="topic_id" type="char(26)"/>
            <column name="seq" type="int"/>
        </createTable>

        <createIndex indexName="ix_topic_id" tableName="topic_seq">
            <column name="topic_id"/>
        </createIndex>
    </changeSet>

    <changeSet author="cagdas.tunca" id="jinear-1-initialize-workspace_display_preference">
        <createTable tableName="workspace_display_preference">
            <column name="workspace_display_preference_id" type="char(26)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="idate" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="udate" type="datetime"/>
            <column name="passive_id" type="char(26)"/>
            <column name="account_id" type="char(26)"/>
            <column name="preferred_workspace_id" type="char(26)"/>
        </createTable>

        <createIndex indexName="ix_account_id" tableName="workspace_display_preference">
            <column name="account_id"/>
        </createIndex>

        <createIndex indexName="ix_preferred_workspace_id" tableName="workspace_display_preference">
            <column name="preferred_workspace_id"/>
        </createIndex>
    </changeSet>

    <changeSet author="cagdas.tunca" id="jinear-1-add-column-to-task-assigned_to">
        <addColumn tableName="task">
            <column name="assigned_to" type="char(26)" afterColumn="owner_id"/>
        </addColumn>

        <createIndex indexName="ix_assigned_to" tableName="task">
            <column name="assigned_to"/>
        </createIndex>
    </changeSet>

    <changeSet author="cagdas.tunca" id="jinear-1-add-column-to-workspace_display_preference-preferred_team_id">
        <addColumn tableName="workspace_display_preference">
            <column name="preferred_team_id" type="char(26)" afterColumn="preferred_workspace_id"/>
        </addColumn>

        <createIndex indexName="ix_preferred_team_id" tableName="workspace_display_preference">
            <column name="preferred_team_id"/>
        </createIndex>
    </changeSet>

    <changeSet author="cagdas.tunca" id="jinear-1-initialize-team_workflow_status">
        <createTable tableName="team_workflow_status">
            <column name="team_workflow_status_id" type="char(26)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="idate" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="udate" type="datetime"/>
            <column name="passive_id" type="char(26)"/>
            <column name="team_id" type="char(26)"/>
            <column name="workspace_id" type="char(26)"/>
            <column name="workflow_state_group" type="varchar(255)"/>
            <column name="name" type="varchar(255)"/>
            <column name="order" type="int"/>
        </createTable>

        <createIndex indexName="ix_team_id" tableName="team_workflow_status">
            <column name="team_id"/>
        </createIndex>

        <createIndex indexName="ix_workspace_id" tableName="team_workflow_status">
            <column name="workspace_id"/>
        </createIndex>
    </changeSet>

    <changeSet author="cagdas.tunca" id="jinear-1-add-column-to-task-workflow_status_id">
        <addColumn tableName="task">
            <column name="workflow_status_id" type="char(26)" afterColumn="owner_id">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <createIndex indexName="ix_workflow_status_id" tableName="task">
            <column name="workflow_status_id"/>
        </createIndex>
    </changeSet>

    <changeSet author="cagdas.tunca" id="jinear-1-initialize-rich_text">
        <createTable tableName="rich_text">
            <column name="rich_text_id" type="char(26)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="idate" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="udate" type="datetime"/>
            <column name="passive_id" type="char(26)"/>
            <column name="related_object_id" type="char(26)"/>
            <column name="value" type="mediumblob"/>
            <column name="type" type="varchar(255)"/>
            <column name="source_stack" type="varchar(255)"/>
        </createTable>

        <createIndex indexName="ix_related_object_id" tableName="rich_text">
            <column name="related_object_id"/>
        </createIndex>
    </changeSet>

    <changeSet author="cagdas.tunca" id="jinear-1-initialize-workspace_activity">
        <createTable tableName="workspace_activity">
            <column name="workspace_activity_id" type="char(26)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="idate" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="udate" type="datetime"/>
            <column name="passive_id" type="char(26)"/>
            <column name="workspace_id" type="char(26)">
                <constraints nullable="false"/>
            </column>
            <column name="team_id" type="char(26)">
                <constraints nullable="false"/>
            </column>
            <column name="task_id" type="char(26)"/>
            <column name="activity_type" type="varchar(255)"/>
            <column name="performed_by" type="char(26)">
                <constraints nullable="false"/>
            </column>
            <column name="related_object_id" type="char(26)">
                <constraints nullable="false"/>
            </column>
            <column name="old_state" type="text"/>
            <column name="new_state" type="text"/>
        </createTable>

        <createIndex indexName="ix_workspace_id" tableName="workspace_activity">
            <column name="workspace_id"/>
        </createIndex>

        <createIndex indexName="ix_team_id" tableName="workspace_activity">
            <column name="team_id"/>
        </createIndex>

        <createIndex indexName="ix_task_id" tableName="workspace_activity">
            <column name="task_id"/>
        </createIndex>

        <createIndex indexName="ix_performed_by" tableName="workspace_activity">
            <column name="performed_by"/>
        </createIndex>

        <createIndex indexName="ix_related_object_id" tableName="workspace_activity">
            <column name="related_object_id"/>
        </createIndex>
    </changeSet>

    <changeSet author="cagdas.tunca" id="jinear-1-add-column-to-team-initialized_by">
        <addColumn tableName="team">
            <column name="initialized_by" type="char(26)" afterColumn="workspace_id" defaultValue="-">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet author="cagdas.tunca" id="jinear-1-drop-default-value-from-team-initialized_by">
        <dropDefaultValue columnDataType="char(26)"
                          columnName="initialized_by"
                          tableName="team"/>
    </changeSet>

    <changeSet author="cagdas.tunca" id="jinear-1-initialize-task-relation">
        <createTable tableName="task_relation">
            <column name="task_relation_id" type="char(26)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="idate" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="udate" type="datetime"/>
            <column name="passive_id" type="char(26)"/>
            <column name="task_id" type="char(26)">
                <constraints nullable="false"/>
            </column>
            <column name="related_task_id" type="char(26)">
                <constraints nullable="false"/>
            </column>
            <column name="relation_type" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet author="cagdas.tunca" id="jinear-1-add-fts-index">
        <sql>
            alter table task
                add fulltext(title)
        </sql>
    </changeSet>

    <changeSet author="cagdas.tunca" id="jinear-1-initialize-task-subscription">
        <createTable tableName="task_subscription">
            <column name="task_subscription_id" type="char(26)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="idate" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="udate" type="datetime"/>
            <column name="passive_id" type="char(26)"/>
            <column name="task_id" type="char(26)">
                <constraints nullable="false"/>
            </column>
            <column name="account_id" type="char(26)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>