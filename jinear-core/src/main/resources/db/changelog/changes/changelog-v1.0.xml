        </createTable>

    </changeSet>

    <changeSet author="cagdas.tunca" id="jinear-1-initialize-username">

        <createTable tableName="username">
            <column name="username_id" type="char(26)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
